{
  "name": "@holiday-lights/holiday-lights-service",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "webpack-cli build --node-env=production",
    "build:dev": "webpack-cli build --node-env=development",
    "build:raspberry": "webpack-cli build --node-env=raspberry",
    "watch": "webpack-cli build --node-env=development --watch",
    "start": "node ../../dist/apps/holiday-lights-service/main.js",
    "serve": "npm run build:dev && concurrently \"npm run watch\" \"nodemon --watch ../../dist/apps/holiday-lights-service --delay 1 ../../dist/apps/holiday-lights-service/main.js\"",
    "serve:raspberry": "npm run build:raspberry && node ../../dist/apps/holiday-lights-service/main.js",
    "test": "jest --config jest.config.cts",
    "lint": "eslint ."
  },
  "dependencies": {
    "@holiday-lights/imager-core": "*",
    "sharp": "^0.33.0"
  }
}

