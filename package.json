    "test:service": "npm run test -w @holiday-lights/holiday-lights-service",
    "test:imager-core": "npm run test -w @holiday-lights/imager-core",
    "lint": "npm run lint --workspaces --if-present",
    "lint:emulator": "npm run lint -w @holiday-lights/emulator",
    "lint:service": "npm run lint -w @holiday-lights/holiday-lights-service",
    "lint:imager-core": "npm run lint -w @holiday-lights/imager-core"
